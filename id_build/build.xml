<?xml version="1.0" encoding="UTF-8"?>
<project name="mandy godding" default="upload" basedir="../">
	
	<!-- Include config file containing FTP credentials -->
	<property file="default.properties" />

	<!-- This target will do all required job -->
	<target name="upload">
		<echo message="${ftp.server}"/>
		<ftp server="${ftp.server}" userid="${ftp.user}" password="${ftp.password}" remotedir="${ftp.dir}"
		binary="yes" verbose="true" passive="yes" >
			<fileset dir=".">
				<include name="**/*" />
				<exclude name="README.md" />
				<exclude name="/documents" />
			</fileset>
		</ftp>
	</target>
</project>
